<p id="notice"><%= notice %></p>

<h1>Declared Programs</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Major</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @declared_programs.each do |declared_program| %>
      <tr>
        <td><%= declared_program.user %></td>
        <td><%= declared_program.major %></td>
        <td><%= link_to 'Show', declared_program %></td>
        <td><%= link_to 'Edit', edit_declared_program_path(declared_program) %></td>
        <td><%= link_to 'Destroy', declared_program, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

