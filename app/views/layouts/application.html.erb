<!DOCTYPE html>
<html>
<head>
  <title>DegreePlanner</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

<%= render "shared/navbar" %>

<main role="main" class="container pb-3">

  <% if notice %>
    <div class="row">
      <p class="alert alert-success"><%= notice %></p>
    </div>
  <% end %>
  <% if alert %>
    <div class="row">
      <p class="alert alert-danger"><%= icon 'fas', 'exclamation-triangle' %> <%= alert %></p>
    </div>
  <% end %>

  <% if content_for? :hero_head %>

    <!-- hero -->
    <div class="py-5">

      <!-- hero header -->
      <div class="row">
        <div class="col">
          <%= yield :hero_head %>
        </div>
      </div>

      <!-- hero lead paragraph -->
      <div class="row">
        <div class="col">
          <p class="lead">
            <%= yield :hero_lead %>
          </p>
        </div>
      </div>

      <!-- hero button group -->
      <% if content_for? :hero_button_group %>
        <div class="row">
          <div class="col">
            <div class="btn-group" role="group">
              <%= yield :hero_button_group %>
            </div>
          </div>
        </div>
      <% end %>
      <hr>
    </div>
    <!-- content -->
    <div class="row">
      <div class="col">
        <%= yield :content %>
      </div>
    </div>

  <% else %>

    <%= yield %>

  <% end %>
</main>
<%= render 'shared/footer' %>
</body>
</html>
