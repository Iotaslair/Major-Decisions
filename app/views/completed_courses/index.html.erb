<p id="notice"><%= notice %></p>

<h1>Completed Courses</h1>

<table>
  <thead>
  <tr>
    <th>User</th>
    <% if current_user.faculty? %>
      <th>Students taking this course</th>
    <% else %>
      <th>Course</th>
    <% end %>

    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% if current_user.faculty? %>
    <% @all_courses = Course.all %>
    <% @all_courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= CompletedCourse.where(course_id: course).count %></td>
      </tr>
    <% end %>
  <% else %>
    <% @completed_courses.each do |completed_course| %>
      <tr>
        <td><%= completed_course.user.email %></td>
        <td><%= completed_course.course.title %></td>
        <td><%= link_to 'Remove', completed_course, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    <% end %>
    </tr>
  <% end %>
  </tbody>

</table>

<br>

<%= link_to 'New Completed Course', new_completed_course_path(user: current_user) %>
